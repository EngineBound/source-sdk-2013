
#include "common_vs_fxc.h"

struct VS_INPUT
{
    float4 vPos : POSITION;
    float4 vColor : COLOR;
};

struct VS_OUTPUT
{
    float4 projPos : SV_POSITION;
    float4 vColor : COLOR;
};

VS_OUTPUT main( const VS_INPUT v )
{
    VS_OUTPUT o = ( VS_OUTPUT )0;
    
    o.projPos = mul( float4(v.vPos.xyz, 1), cMVPMatrix);
    
    o.vColor = v.vColor;
    return o;
}